@model Awards.Models.User
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>
<form asp-action="EditUser" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Age" value="@Model.Age" />
    <input type="hidden" asp-for="Photo" value="@Model.Photo" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Password</label>
        <input asp-for="BirthDate" type="date" class="form-control" placeholder="Birth date" value="@Model.BirthDate">
    </div>
    <div class="form-group">
        <img src="@Model.Photo" alt="фото" width="150" height="150"/>
    </div>
    <div class="form-group">
        <label asp-for="PhotoData">Фото пользователя</label>
        <input asp-for="PhotoData" type="file" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменнения</button>
</form>
