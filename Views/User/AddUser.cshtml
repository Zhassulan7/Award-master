@model Awards.Models.User
@{
    ViewData["Title"] = "AddUser";
}

<h1>AddUser</h1>
<form asp-action="AddUser">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control"  placeholder="Enter name">        
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Password</label>
        <input asp-for="BirthDate" type="date" class="form-control"  placeholder="Birth date">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
