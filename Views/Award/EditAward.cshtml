@model Awards.Models.Award
    @{
        ViewData["Title"] = "EditAward";
    }

    <h1>EditAward</h1>
    <form asp-action="EditAward" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="Title">Название</label>
            <input asp-for="Title" type="text" class="form-control" value="@Model.Title" placeholder="Введите название награды">
        </div>
        <div class="form-group">
            <label asp-for="Description">Описание</label>
            <input asp-for="Description" type="text" value="@Model.Description" class="form-control" placeholder="Описание награды">
        </div>
        <div class="form-group">
            <label asp-for="ImageData">Фотография</label>
            <input required asp-for="ImageData" type="file" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Изменить</button>
    </form>
    <form asp-action="RemoveAward" method="post">
        <input type="hidden" name="awardId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Удалить награду</button> 
    </form>
